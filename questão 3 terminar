#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <string.h>

int main()
{
    setlocale(LC_ALL, "portuguese");

    int codigo;
    int i;
    int numero[i];
    int contador = 0;
    char nomes[contador];

        printf("Informe seu nome: ");
        gets(nomes[i]);

        fflush(stdin);

        printf("Digite o número telefônico: ");
        scanf("%d", &numero[i]);
        

    
        do
    {
        printf("Escolha um código de sua preferência: \n");
        printf("-1- Adicionar um Número \n");
        printf("-2- Mostrar Números Cadastrados e Encerrar \n");
        printf("Digite um código:\n ");
        scanf("%d", &codigo);
        switch (codigo)
        {
        case 1:
            printf("Informe seu nome: ");
            gets(nomes[i]);

        fflush(stdin);

            printf("Digite o número telefônico: ");
            scanf("%d", &numero[i]);


            contador++;
            break;

        case 2:
            for ( i = 1; i <= contador; i++)
            {
                printf("\n %dº Nome: %s\n" ,i ,nomes[i]);
                printf("\n %dº Número Telefônico: %d\n" ,i ,numero[i]);
                
            }
            


            break;

        default:
            printf("Opção Inválida!");
            break;
        }

        } while (codigo != 2);
    
    
    

    return 0;
}
