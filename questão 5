#include <locale.h>
#include <string.h>
#include <stdlib.h>
#include <stdio.h>

int main()
{
    setlocale(LC_ALL, "portuguese");

    char produtos[99][200];
    float valores[99];
    float totalGeral = 0;
    int quantidade[99];
    int codigo;
    int contador = 0, i;
    do
    {
     
        printf(" \n --Menu-- \n ");
        printf("Produtos: \n");
        printf("(1) Creme = R$30,00\n", 1);
        printf("(2) Sabonete = R$8,00\n", 2);
        printf("(3) Hidratante = R$12,00\n", 3);
        printf("------------------------------------------------- \n");
        printf(" (1) Adicionar uma venda\n");
        printf(" (2) Sair do Menu e exibir o total das vendas \n");
printf("---------------------\n");
        scanf("%d", &codigo);

        system("cls || clear");

        switch (codigo)
        {
        case 1:
            fflush(stdin);

            printf("Informe o nome do produto: ");
            gets(produtos[contador]);

            printf("Digite o pre√ßo: ");
            scanf("%f", &valores[contador]);

            printf("Digite a quantidade: ");
            scanf("%d", &quantidade[contador]);

            contador++;
            system("cls || clear");
            break;

        case 2:
            printf("Total das Vendas: \n \n");
            for (i = 0; i < contador; i++)
            {
                printf("Produto: %-20s | Preco: R$%-10.2f | Quantidade: %-5d | Total de vendas do produto: R$%.2f\n", produtos[i], valores[i], quantidade[i], quantidade[i] * valores[i]);

                totalGeral += quantidade[i] * valores[i];
            }

            printf("\nTotal geral de vendas: R$%.2f\n", totalGeral);
            break;

        default:
            printf("Opcao Invalida! \n");
            break;
        }

    } while (codigo != 2);

    return 0;
}